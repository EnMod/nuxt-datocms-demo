.accordion
  h1
    font-size: 130%
    padding: 15px
    text-align: center
    color: var(--gold)
    background-color: var(--green)
    color: var(--gold)
    &:hover
      background-color: var(--gold)
      color: var(--green)
  .acc-item
    position: relative
    margin-bottom: 1px
    width: 100%
    background-color: var(--gold)
    color: var(--green)
  .acc-text
    background-color: var(--gold)
    max-height: 0
    overflow: hidden
    background: var(--gold)
    transition: max-height .35s
    p
      margin: 1em
  /* Icon */
  label
    position: relative
    display: block
    padding: 0 0 0 1em
    background: #16a085
    line-height: 3
    cursor: pointer
    background-color: var(--green)
    color: white
    &:after
      position: absolute
      right: 0
      top: 0
      display: block
      width: 3em
      height: 3em
      line-height: 3
      text-align: center
      transition: all .35s
  /* :checked */
  input
    position: absolute
    opacity: 0
    z-index: -1
    &:checked ~ .acc-text
      max-height: 30em
    &[type=checkbox] + label::after
      content: "+"
    &[type=radio] + label::after
      content: "\25BC"
    &[type=checkbox]:checked + label::after
      transform: rotate(315deg)
    &[type=radio]:checked + label::after
      transform: rotateX(180deg)
